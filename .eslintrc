{
  'parser': 'babel-eslint',
  'env': {
    // I write for browser
    'browser': true,
    // in CommonJS
    'node': true,
    // use ES6
    'es6': true
  },
  'parserOptions': {
    'ecmaVersion': 7,
    'sourceType': 'module',
    'ecmaFeatures': {
        'jsx': true,
        'experimentalObjectRestSpread': true
    }
  },
  'plugins': [
    // enable react plugin
    'react'
  ],
  'globals': {
    '__WEBPACK__IS_SERVER': true,
    '__WEBPACK__IS_CLIENT': true
  },
  // To give you an idea how to override rule options
  'rules': {
    'array-bracket-spacing': [1, 'never'],
    'camelcase': 2,
    'comma-dangle': 0,
    'comma-spacing': [2, {'before': false, 'after': true}],
    'comma-style': [2, 'last'],
    'complexity': [1, 20],
    'computed-property-spacing': [1, 'never'],
    'consistent-return': 1,
    'curly': 2,
    'default-case': 2,
    'dot-notation': 2,
    'eol-last': 2,
    'eqeqeq': 2,
    'handle-callback-err': 1,
    'indent': 2, // 4 spaces
    'jsx-quotes': 1,
    'key-spacing': [1, {'beforeColon': false, 'afterColon': true}],
    'keyword-spacing': 1,
    'max-depth': [2, 3],
    'max-len': [2, 140],
    'max-nested-callbacks': [2, 3],
    'max-params': [1, 4],
    'max-statements': [1, 20],
    'no-alert': 2,
    'no-array-constructor': 2,
    'no-caller': 2,
    'no-catch-shadow': 2,
    'no-console': 1,
    'no-debugger': 2,
    'no-delete-var': 2,
    'no-dupe-args': 2,
    'no-dupe-keys': 2,
    'no-else-return': 2,
    'no-empty': 2,
    'no-eq-null': 2,
    'no-eval': 2,
    'no-extend-native': 2,
    'no-extra-boolean-cast': 2,
    'no-extra-parens': [2, 'functions'],
    'no-extra-semi': 2,
    'no-floating-decimal': 2,
    'no-implied-eval': 2,
    'no-invalid-regexp': 2,
    'no-irregular-whitespace': 2,
    'no-iterator': 2,
    'no-labels': 2,
    'no-lone-blocks': 2,
    'no-loop-func': 1,
    'no-mixed-spaces-and-tabs': 2,
    'no-multi-spaces': 2,
    'no-multiple-empty-lines': [1, {'max': 2}],
    'no-native-reassign': 2,
    'no-nested-ternary': 2,
    'no-new-func': 2,
    'no-new-object': 2,
    'no-new-require': 2,
    'no-new-wrappers': 2,
    'no-new': 2,
    'no-path-concat': 2,
    'no-proto': 2,
    'no-redeclare': 2,
    'no-return-assign': 2,
    'no-script-url': 2,
    'no-self-compare': 2,
    'no-sequences': 2,
    'no-shadow-restricted-names': 2,
    'no-shadow': 2,
    'no-spaced-func': 2,
    'no-sparse-arrays': 2,
    'no-throw-literal': 2,
    'no-trailing-spaces': 2,
    'no-undef': 2,
    'no-underscore-dangle': 0,
    'no-unreachable': 2,
    'no-unused-expressions': 2,
    'no-unused-vars': [2, {'vars': 'all', 'args': 'after-used'}],
    'no-use-before-define': 2,
    'no-var': 2,
    'no-void': 2,
    'object-curly-spacing': [2, 'always'],
    'object-shorthand': 0,
    'prefer-const': 2,
    'quote-props': [2, 'consistent-as-needed', {'keywords': true}],
    'quotes': [1, 'single'],
    'radix': 2,
    'react/jsx-no-undef': 1,
    'react/jsx-uses-react': 1,
    'react/jsx-uses-vars': 1,
    'react/jsx-wrap-multilines': 1,
    'react/no-did-mount-set-state': 0,
    'react/no-did-update-set-state': 1,
    'react/no-multi-comp': 1,
    'react/react-in-jsx-scope': 1,
    'react/self-closing-comp': 1,
    'semi-spacing': [2, {'before': false, 'after': true}],
    'semi': [2, 'always'],
    'space-before-blocks': [1, 'always'],
    'space-before-function-paren': [1, {'anonymous': 'never', 'named': 'never'}],
    'space-in-parens': [1, 'never'],
    'space-infix-ops': 2,
    'strict': 0,
    'use-isnan': 2,
    'valid-jsdoc': 2,
    'valid-typeof': 2,
    'yoda': 0
  }
}
